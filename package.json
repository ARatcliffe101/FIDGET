{
  "name": "fidget",
  "version": "2.5.0",
  "description": "FIDGET \u2013 Financial Invoice, Deal & Job Engagement Tracker",
  "main": "main.js",
  "private": true,
  "scripts": {
    "start": "electron ."
  },
  "dependencies": {
    "chokidar": "^3.6.0",
    "electron": "^30.0.0",
    "pdf-parse": "^1.1.1",
    "tesseract.js": "^5.1.0",
    "mailparser": "^3.7.2",
    "@kenjiuno/msgreader": "^1.0.0",
    "mammoth": "^1.8.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "org.fidget.app",
    "productName": "FIDGET",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "ui/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "ui/assets/FIDGET.png"
    }
  }
}